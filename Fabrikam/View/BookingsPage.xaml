<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fabrikam.View.BookingsPage">
  <StackLayout Padding="30" Spacing="25">
    <Button Text="Make a booking" VerticalOptions="Center" HorizontalOptions="Center" Clicked="OnMakeBookingButtonClicked"></Button>
    <Button Text="Check your booking" VerticalOptions="Center" HorizontalOptions="Center" Clicked="OnCheckBookingButtonClicked"></Button>
    <Button Text="Cancel your booking" VerticalOptions="Center" HorizontalOptions="Center" Clicked="OnCancelBookingButtonClicked"></Button>
  </StackLayout>
</ContentPage>